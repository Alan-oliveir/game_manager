{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "context": "local",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-create",
    "core:window:allow-center",
    "core:window:allow-set-focus",
    "core:window:allow-show",
    "core:window:allow-close",
    "core:path:default",
    "opener:default",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "shell:allow-open",
    "shell:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:default",
    "machine-uid:default",
    "machine-uid:allow-get-machine-uid"
  ]
}