{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Playlite",
  "version": "1.0.1",
  "identifier": "com.game-manager.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Playlite",
        "url": "index.html",
        "maximized": true,
        "visible": true,
        "fullscreen": false,
        "width": 900,
        "height": 600
      }
    ],
    "security": {
      "capabilities": [
        "default"
      ],
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://cdn.cloudflare.steamstatic.com https://media.rawg.io; connect-src 'self' https://api.steampowered.com https://store.steampowered.com https://api.rawg.io https://www.cheapshark.com"
    }
  },
  "bundle": {
    "active": true,
    "copyright": "Copyright Â© 2026 Alan Goncalves",
    "targets": "msi",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
